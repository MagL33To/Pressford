@model ArticleAddModel
@{
    ViewBag.Title = "Edit article";
}

<h2>Edit article</h2>

<div style="padding-bottom: 10px">
    @Html.ActionLink("Delete this article", "DeleteArticle", "Article", new { id = Model.Id }, new { onclick = "return confirm('Are you sure you want to delete this article?')" })
</div>

<div>
    @using (Html.BeginForm("ModifyArticle", "Article", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)

        @Html.LabelFor(x => x.Title, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

        @Html.LabelFor(x => x.Body, new { @class = "control-label col-sm-2" })
        @Html.TextAreaFor(x => x.Body, new { @class = "form-control", rows = "30" })

        <button type="submit">Save changes</button>
    }
</div>